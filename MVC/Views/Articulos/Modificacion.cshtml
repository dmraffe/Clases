@{
}
@model  MVC.Models.Articulo 
<html>
<body>
    <div>
        <form method="post" action="../../Articulos/Modificacion/">
            <label>
                Codigo:<br />
                <input type="text" name="codigo" value="@Model.Codigo" readonly />
            </label>
            <br />
            <label>
                Descripcion:<br />
                <input type="text" name="descripcion" value="@Model.Descripcion" />
            </label>
            <br />
            <label>
                Precio:<br />
                <input type="text" name="precio" value="@Model.Precio" />
            </label>
            <br />
            <input type="submit" value="Confirmar" />
        </form>
    </div>
</body>
</html>
