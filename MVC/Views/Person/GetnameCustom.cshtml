@{
}

@model Person

@using (Html.BeginForm())
{ 
    @Html.LabelFor(p =>p.Name)
    @Html.EditorFor(p =>p.Name)
    <br />
    @Html.LabelFor(p =>p.Password)
    @Html.EditorFor(p =>p.Password)
    <br />
    @Html.LabelFor(p =>p.Birthdate)
    @Html.EditorFor(p =>p.Birthdate)



    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}


@using (Html.BeginForm())
{
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <br />
    <label asp-for="Password"></label>
    <input asp-for="Password" />
    <br />
    <label asp-for="Birthdate"></label>
    <input asp-for="Birthdate" />
    <br />
    <label asp-for="EmailAddress"></label>
    <input asp-for="EmailAddress" />
    <br />
    <label asp-for="Description"></label>
    <input asp-for="Description" />

    <br />
    <label asp-for="ContactMe"></label>
    <input asp-for="ContactMe" />

    <br />



    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}
@if (ViewBag.Error !=null) 
@foreach (ModelError item in ViewBag.Error)
{
        <p>  <span style="color:red">@item.ErrorMessage</span> </p>
}

 